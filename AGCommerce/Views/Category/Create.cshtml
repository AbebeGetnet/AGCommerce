@model Category
<form method="post">
    <div class="container">
        <div class="row pb-2">
            <h2 class="text-primary">Create category</h2>
        </div>
        <div class="col-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mt-2">
            <button type="submit" class="btn btn-success" style="width:150px">Create</button>
            <a asp-action="Index" class="btn btn-info" style="width:150px">Back to list</a>
        </div>
    </div>
</form> 